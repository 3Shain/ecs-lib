{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./",
    "baseUrl": "./",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "esnext",
      "es5"
    ],
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "types": [
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "example"
  ]
}
